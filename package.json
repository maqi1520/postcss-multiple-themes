{
  "name": "postcss-multiple-themes",
  "version": "0.1.0",
  "description": "PostCSS plugin for generate themes css",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "postcss-themes",
    "postcss-multiple-themes"
  ],
  "scripts": {
    "test": "jest --coverage && eslint .",
    "semantic-release": "semantic-release"
  },
  "author": "马琪斌 <maqi1520@163.com>",
  "license": "MIT",
  "repository": "http://github.com/maqi1520/postcss-multiple-themes",
  "publishConfig": {
    "access": "public",
    "branches": [
      "master"
    ]
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.2.8"
  },
  "devDependencies": {
    "clean-publish": "^2.1.0",
    "eslint": "^7.21.0",
    "eslint-plugin-jest": "^24.2.1",
    "jest": "^26.6.3",
    "semantic-release": "^17.4.4",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.8",
    "simple-git-hooks": "^2.0.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "jest/expect-expect": "off"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  }
}
